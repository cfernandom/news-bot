# Production Environment Configuration for PreventIA News Analytics
# Copy to .env.production and fill in actual values

# Database Configuration
DATABASE_URL=postgresql://preventia:CHANGE_THIS_PASSWORD@postgres:5432/preventia_news
POSTGRES_DB=preventia_news
POSTGRES_USER=preventia
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=CHANGE_THIS_PASSWORD

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
API_WORKERS=4
API_MAX_CONNECTIONS=20
LOG_LEVEL=info

# CORS Configuration (Update with your actual domains)
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com", "https://api.yourdomain.com"]

# OpenAI Configuration
OPENAI_API_KEY=sk-CHANGE_THIS_TO_YOUR_ACTUAL_OPENAI_KEY

# Scraper Configuration
DAYS_INTERVAL=7
WEEKLY_DAY=1
WEEKLY_TIME=06:00

# Security Configuration
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_FOR_PRODUCTION
JWT_SECRET_KEY=CHANGE_THIS_TO_ANOTHER_RANDOM_SECRET_KEY
ENCRYPTION_KEY=CHANGE_THIS_TO_32_BYTE_ENCRYPTION_KEY

# Monitoring Configuration
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD
GRAFANA_SECRET_KEY=CHANGE_THIS_GRAFANA_SECRET_KEY
SMTP_PASSWORD=CHANGE_THIS_SMTP_PASSWORD

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Domain Configuration
DOMAIN_NAME=yourdomain.com
API_DOMAIN=api.yourdomain.com
MONITORING_DOMAIN=monitoring.yourdomain.com

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=preventia-backups
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=CHANGE_THIS_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_THIS_AWS_SECRET_KEY

# Performance Configuration
MAX_POOL_SIZE=20
POOL_TIMEOUT=30
POOL_RECYCLE=3600
QUERY_TIMEOUT=30

# Feature Flags
ENABLE_MONITORING=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_ANALYTICS_EXPORT=true
ENABLE_REAL_TIME_UPDATES=true

# External Services
SENTRY_DSN=https://CHANGE_THIS_SENTRY_DSN@sentry.io/PROJECT_ID
ELASTIC_SEARCH_URL=https://elasticsearch.yourdomain.com:9200
ELASTIC_SEARCH_USERNAME=elastic
ELASTIC_SEARCH_PASSWORD=CHANGE_THIS_ELASTIC_PASSWORD

# Email Configuration
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=noreply@yourdomain.com
SMTP_PASSWORD=CHANGE_THIS_SMTP_PASSWORD
SMTP_USE_TLS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_BURST=20

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_EXPIRE_ON_UPDATE=true

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/app/logs/application.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_RETRIES=3

# Production Safety
DEBUG=false
TESTING=false
DEVELOPMENT=false
PRODUCTION=true
