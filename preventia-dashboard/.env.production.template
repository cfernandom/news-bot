# PreventIA Dashboard Production Environment Template
# Copy this file to .env.production and configure the values

# API Configuration - Use relative path for Nginx proxy in production
# For production with Nginx proxy: /api
# For external API: http://your-api-server:8000/api
VITE_API_URL=/api

# Environment
VITE_NODE_ENV=production

# Analytics - Add your Google Analytics ID if needed
VITE_GOOGLE_ANALYTICS_ID=

# Feature Flags
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_MOCK_DATA=false

# Performance
VITE_API_TIMEOUT=15000
VITE_QUERY_STALE_TIME=600000

# Security - Add additional security configurations if needed
# VITE_SENTRY_DSN=
# VITE_API_KEY=
